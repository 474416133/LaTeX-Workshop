{
  "microtypesetup": {
    "command": "microtypesetup",
    "snippet": "microtypesetup{${1:key=value}}"
  },
  "DeclareMicrotypeSet[]{}{}": {
    "command": "DeclareMicrotypeSet[features]{name}{fonts}",
    "snippet": "DeclareMicrotypeSet[${3:features}]{${1:name}}{${2:fonts}}"
  },
  "UseMicrotypeSet[]{}": {
    "command": "UseMicrotypeSet[features]{name}",
    "snippet": "UseMicrotypeSet[${2:features}]{${1:name}}"
  },
  "DeclareMicrotypeSetDefault[]{}": {
    "command": "DeclareMicrotypeSetDefault[features]{name}",
    "snippet": "DeclareMicrotypeSetDefault[${2:features}]{${1:name}}"
  },
  "SetProtrusion[]{}{}": {
    "command": "SetProtrusion[options]{fonts}{settings}",
    "snippet": "SetProtrusion[${3:options}]{${1:fonts}}{${2:settings}}"
  },
  "SetExpansion[]{}{}": {
    "command": "SetExpansion[options]{fonts}{settings}",
    "snippet": "SetExpansion[${3:options}]{${1:fonts}}{${2:settings}}"
  },
  "SetTracking[]{}{}": {
    "command": "SetTracking[options]{fonts}{settings}",
    "snippet": "SetTracking[${3:options}]{${1:fonts}}{${2:settings}}"
  },
  "SetExtraKerning[]{}{}": {
    "command": "SetExtraKerning[options]{fonts}{settings}",
    "snippet": "SetExtraKerning[${3:options}]{${1:fonts}}{${2:settings}}"
  },
  "SetExtraSpacing[]{}{}": {
    "command": "SetExtraSpacing[options]{fonts}{settings}",
    "snippet": "SetExtraSpacing[${3:options}]{${1:fonts}}{${2:settings}}"
  },
  "DeclareCharacterInheritance[]{}{}": {
    "command": "DeclareCharacterInheritance[features]{fonts}{list}",
    "snippet": "DeclareCharacterInheritance[${3:features}]{${1:fonts}}{${2:list}}"
  },
  "DeclareMicrotypeVariants": {
    "command": "DeclareMicrotypeVariants",
    "snippet": "DeclareMicrotypeVariants{${1:suffixes}}"
  },
  "DeclareMicrotypeAlias": {
    "command": "DeclareMicrotypeAlias",
    "snippet": "DeclareMicrotypeAlias{${1:font}}{${2:alias}}"
  },
  "LoadMicrotypeFile": {
    "command": "LoadMicrotypeFile",
    "snippet": "LoadMicrotypeFile{${1:font}}"
  },
  "microtypecontext": {
    "command": "microtypecontext",
    "snippet": "microtypecontext{${1:context}}"
  },
  "textmicrotypecontext": {
    "command": "textmicrotypecontext",
    "snippet": "textmicrotypecontext{${1:context}}{${2:text}}"
  },
  "DeclareMicrotypeBabelHook": {
    "command": "DeclareMicrotypeBabelHook",
    "snippet": "DeclareMicrotypeBabelHook{${1:languages}}{${2:context}}"
  },
  "DisableLigatures[]{}": {
    "command": "DisableLigatures[charac]{fonts}",
    "snippet": "DisableLigatures[${2:charac}]{${1:fonts}}"
  },
  "DisableLigatures": {
    "command": "DisableLigatures",
    "snippet": "DisableLigatures{${1:fonts}}"
  },
  "textls[]{}": {
    "command": "textls[amount]{text}",
    "snippet": "textls[${2:amount}]{${1:text}}"
  },
  "lsstyle": {
    "command": "lsstyle",
    "snippet": "lsstyle"
  },
  "lslig": {
    "command": "lslig",
    "snippet": "lslig{${1:ligature}}"
  }
}